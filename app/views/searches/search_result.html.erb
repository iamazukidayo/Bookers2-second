

<table class="table table-hover table-inverse">
  <!--検索モデルがuserの時-->
  <% if @range == "User" %>
  <h2>Users search for "<%= @content %>"</h2>
   <tbody>
     <% @users.each do |user| %>
       <tr>
         <td><%= image_tag user.get_profile_image(100,100)  %></td>
         <td><%= user.name %></td>
       </tr>
     <% end %>
   </tbody>
   <% else %>
   <h2>Books search for "<%= @content %>"</h2>
   <!--検索対象モデルがbookの時-->

   <tbody>

     <% @books.each do |book| %>
       <tr>
        <td><%= image_tag book.user.get_profile_image(100,100)  %></td>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
       </tr>
    <% end %>
   </tbody>
  <% end %>
</table>
