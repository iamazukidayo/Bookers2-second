            <% end %>
       </div>

        <% else %>
          <div><%= link_to edit_user_path(user.id), class: "edit btn btn-outline-secondary btn-block"  do %>
                <i class="fas fa-user-cog"></i>
               <% end %>
         </div>
        <% end %>

